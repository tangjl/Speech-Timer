<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jordantang.speechtimer.MainActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:text="START"/>

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="PAUSE"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:text="RESET"/>

    <TextView
        android:id="@+id/viewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pause"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/timeValue"
        android:textSize="70dp" />


    <Button
        android:id="@+id/submitTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_alignBaseline="@+id/minutes"
        android:layout_alignBottom="@+id/minutes"
        android:layout_alignLeft="@+id/reset"
        android:layout_alignStart="@+id/reset" />

    <EditText
        android:id="@+id/seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:ems="2"
        android:layout_alignBaseline="@+id/submitTime"
        android:layout_alignBottom="@+id/submitTime"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:ems="2"
        android:layout_marginTop="82dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_below="@+id/start"
        android:layout_alignRight="@+id/start"
        android:layout_alignEnd="@+id/start" />

    <TextView
        android:text="Minutes:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/minutes"
        android:layout_toLeftOf="@+id/minutes"
        android:layout_toStartOf="@+id/minutes"
        android:id="@+id/textView" />

    <TextView
        android:text="Seconds:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_toLeftOf="@+id/seconds"
        android:layout_toStartOf="@+id/seconds"
        android:id="@+id/textView2" />

</RelativeLayout>
